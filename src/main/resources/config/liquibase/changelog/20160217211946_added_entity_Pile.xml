<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Pile.
    -->
    <changeSet id="20160217211946" author="jhipster">
        <createTable tableName="pile">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mix_design" type="varchar(255)"/>
            
            <column name="slump_flow_test" type="integer"/>
            
            <column name="pouring_rate" type="decimal(10,2)"/>
            
            <column name="total_casted_volume" type="decimal(10,2)"/>
            
            <column name="theoretical_concrete_volume" type="decimal(10,2)"/>
            
            <column name="overconsumption_of_concrete" type="integer"/>
            
            <column name="comment" type="varchar(255)"/>
            
            <column name="signature_date" type="timestamp"/>
            
            <column name="sub_contractor" type="varchar(255)"/>
            
            <column name="main_contractor" type="varchar(255)"/>
            
            <column name="client" type="varchar(255)"/>
            
            <column name="user_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="pile" columnName="signature_date" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="pile"
                                 constraintName="fk_pile_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

    </changeSet>
</databaseChangeLog>
